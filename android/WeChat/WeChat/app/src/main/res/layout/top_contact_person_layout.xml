<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab_contact_person_friend"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/tab_contact_person_selector"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="好友"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_contact_person_group"
        android:background="@drawable/tab_contact_person_selector"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="群组"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/add_person_img_view"
        android:layout_width="32dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/add_contact_person"
        android:layout_height="32dp"/>

</LinearLayout>